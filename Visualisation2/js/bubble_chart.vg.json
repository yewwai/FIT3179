{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 400,
    "title": {
        "text": "Tourist Spending Patterns in Malaysia",
        "fontSize": 16
    },
    "data": {
        "url": "https://raw.githubusercontent.com/yewwai/FIT3179/refs/heads/main/Visualisation2/data/tourist_expenditure_by_country.csv"
    }, 
    "params": [
        {
            "name": "Tourist_Arrivals_Above",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 1000000,
                "step": 50000,
                "name": "Tourist Arrivals: "
            }
        },
        {
            "name": "Year",
            "value": 2019,
            "bind": {
                "input": "range",
                "min": 2015,
                "max": 2019,
                "step": 1,
                "name": "Year: "
            }
        },
        {
            "name": "Continent_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "America",
                    "East Asia",
                    "Europe",
                    "Non South East Asia",
                    "South Asia",
                    "South East Asia",
                    "West Asia"
                ],
                "labels": [
                    "All",
                    "America",
                    "East Asia",
                    "Europe",
                    "Non South East Asia",
                    "South Asia",
                    "South East Asia",
                    "West Asia"
                ],
                "name": "Continent Selection: "
            }
        }
    ],
    "transform": [
        {"filter": "datum.Tourist_Arrivals > Tourist_Arrivals_Above"},
        {"filter": "Year == null || datum.Year == Year"},
        {
            "filter": "Continent_selection == null || datum.Continent == Continent_selection"
        }
    ],
    "encoding": {
        "x": {
            "field": "Average_Per_Capita(RM)",
            "type": "quantitative",
            "title": "Average per Capita Spending (RM)",
            "axis": {"tickCount": 7},
            "scale": {"domain": [0, 12000]}
        },
        "y": {
            "field": "Average_Per_Diem(RM)",
            "type": "quantitative",
            "title": "Average per Diem Spending (RM)",
            "axis": {"tickCount": 6},
            "scale": {"domain": [150, 1450]}
        }
    },
    "layer": [
        {
            "transform": [{ "filter": { "field": "Country", "equal": "Oman" } }, { "filter": { "param": "Year" } }],
            "mark": {
                "type": "text",
                "fontSize": 80,
                "dx": -40,
                "dy": 30,
                "opacity": 0.06,
                "align": "left",
                "baseline": "top"
            },
            "encoding": { "text": { "field": "Year", "type": "nominal" } }
        },
        {
            "params": [
                {
                    "name": "grid",
                    "select": "interval",
                    "bind": "scales"
                },
                {
                    "name": "continent_highlight",
                    "select": {
                        "type": "point",
                        "fields": [
                            "Continent"
                        ]
                    },
                    "bind": "legend"
                },
                {
                    "name": "highlight",
                    "select": {
                        "type": "point",
                        "on": "mouseover",
                        "clear": "mouseout"
                    }
                }
            ],
            "mark": {
                "type": "circle",
                "stroke": "black",
                "strokeWidth": 1
            },
            "encoding": {
                "size": {
                    "field": "Tourist_Arrivals",
                    "type": "quantitative",
                    "title": "Tourist Arrivals",
                    "scale": {
                        "type": "threshold",
                        "domain": [10000, 50000, 100000, 500000, 1000000],
                        "range": [50, 100, 250, 500, 800, 2000]
                    },
                    "legend": {"format": ".1s"}
                },
                "color": {
                    "field": "Continent",
                    "type": "nominal",
                    "scale": {
                        "domain": [
                            "America",
                            "East Asia",
                            "Europe",
                            "Non South East Asia",
                            "South Asia",
                            "South East Asia",
                            "West Asia"
                        ],
                        "range": [
                            "#e41a1c",
                            "#984ea3",
                            "#ff7f00",
                            "#a6cee3",
                            "#377eb8",
                            "#a65628",
                            "#e37383"
                        ]
                    }
                },
                "opacity": {
                    "condition": {
                        "param": "continent_highlight",
                        "value": 0.6
                    },
                    "value": 0.05
                },
                "strokeOpacity": {
                    "condition": [
                        {
                            "param": "highlight",
                            "empty": false,
                            "value": 1
                        }
                    ],
                    "value": 0
                },
                "tooltip": [
                    {"field": "Country", "type": "nominal"},
                    {"field": "Tourist_Arrivals", "type": "quantitative", "format": ",", "title": "Tourist Arrivals"},
                    {"field": "Average_Per_Capita(RM)", "type": "quantitative", "format": ",", "title": "Average per Capita Spending (RM)"},
                    {"field": "Average_Per_Diem(RM)", "type": "quantitative", "format": ",", "title": "Average per Diem Spending (RM)"}
                ]
            }
        },
        
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -12,
                "fontSize": 10,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": {"field": "Country", "type": "nominal"},
                "color": {"value": "black"},
                "opacity": {
                    "condition": {
                        "test": "datum['Country'] == 'United Arab Emirates'",
                        "value": 1
                    },
                    "value": 0
                },
                "tooltip": [
                    {"field": "Country", "type": "nominal"},
                    {"field": "Tourist_Arrivals", "type": "quantitative", "format": ",", "title": "Tourist Arrivals"},
                    {"field": "Average_Per_Capita(RM)", "type": "quantitative", "format": ",", "title": "Average per Capita Spending (RM)"},
                    {"field": "Average_Per_Diem(RM)", "type": "quantitative", "format": ",", "title": "Average per Diem Spending (RM)"}
                ]
            }
        }
    ]
}
